<Window x:Class="I2CMonitorApp.USBPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2CMonitorApp"
        mc:Ignorable="d"
        Title="USBPanelWindow" Height="500" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Width="400" Margin="10,0,0,10" Height="31" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="connLabelT" Content="Disconnected" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button x:Name="connButtonT" Grid.Column="3" Content="Connect" Margin="5" Click="OnConnectButtonTClick"/>
            <ComboBox x:Name="connPortBoxT" Grid.Column="2" Margin="3"/>
        </Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Left" Width="400" Margin="10,0,0,10" Height="31" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="connLabelC" Content="Disconnected" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button x:Name="connButtonC" Grid.Column="3" Content="Connect" Margin="5" Click="OnConnectButtonCClick"/>
            <ComboBox x:Name="connPortBoxC" Grid.Column="2" Margin="3"/>
        </Grid>
        <Border BorderBrush="Black" BorderThickness="0,0,1,0" />
        <Label Content="TPS25751" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Grid.Column="1" Content="EEPROM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Grid Margin="10,50,0,0" Width="450" Height="281" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Mode" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Content="Status" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="2"/>
            <Label Content="Power Path Status" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="4"/>
            <Label Content="Boot Flags" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="6"/>
            <Label Content="Active PDO" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="8"/>
            <Label Content="Active RDO" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="10"/>
            <Label Content="Power Status" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="12"/>
            <Label Content="PD Status" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="14"/>
            <TextBox x:Name="modeBox" Text="????" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="statusBox" Text="00000000" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="ppStatusBox" Text="0000000000" Grid.Row="4" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="bootFlagsBox" Text="0000000000" Grid.Row="6" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="activePDOBox" Text="000000000000" Grid.Row="8" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="activeRDOBox" Text="00000000" Grid.Row="10" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="powerStatusBox" Text="0000" Grid.Row="12" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="pdStatusBox" Text="000000" Grid.Row="14" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        </Grid>
        <Grid Margin="48,355,0,0" Width="424" Height="63" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label Content="Addr 0x" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Content="Size (B)" Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Content="Data 0x" Grid.Row="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <TextBox x:Name="manAddrBox" Text="00" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="manSizeBox" Text="0" Grid.Row="0" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="manDataBox" Text="00" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="Read" Grid.Column="4" Margin="3" Click="DoManualRead"/>
            <Button Content="Write" Grid.Row="1" Grid.Column="4" Margin="3" Click="DoManualWrite"/>
        </Grid>
        <Grid Grid.Column="1" Margin="0,50,0,0" Width="464" Height="171" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Label Content="File" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Grid.Row="4" Content="Write:" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Grid.Row="6" Content="Verify:" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <TextBox x:Name="romFileBox" Text="(none)" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="romStartButton" Content="Write" Grid.Row="2" Grid.Column="1" Margin="3" Click="DoROMWrite"/>
            <ProgressBar x:Name="romWriteBar" Grid.Row="4" Grid.Column="1" Margin="3" />
            <ProgressBar x:Name="romVerifyBar" Grid.Row="6" Grid.Column="1" Margin="3" />
            <Label x:Name="romStatusLabel" Grid.Row="8" Grid.Column="1" Content="Idle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="Select..." Grid.Column="2" Margin="3" Click="SelectROMFile"/>
            <Label x:Name="romWriteLabel" Grid.Row="4" Grid.Column="2" Content="0%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
            <Label x:Name="romVerifyLabel" Grid.Row="6" Grid.Column="2" Content="0%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="1" Margin="45,256,0,0" Width="276" Height="75" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label Content="Addr 0x" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Label Content="Data 0x" Grid.Row="1" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <TextBox x:Name="romManAddrBox" Text="0000" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="romManDataBox" Text="00000000" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Button Content="Read" Grid.Column="2" Margin="3" Click="DoROMManualRead"/>
        </Grid>
    </Grid>
</Window>
