<Window x:Class="I2CMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I2CMonitorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="40,40,0,0" HorizontalAlignment="Left" Width="143" Height="271" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Amplifier" Margin="3" Click="OpenAmpWindow"/>
            <Button Content="Charger" Grid.Row="2" Margin="3" Click="OpenChargerWindow"/>
            <Button Content="Battery" Grid.Row="4" Margin="3" Click="OpenBatteryWindow"/>
            <Button Content="Bluetooth" Grid.Row="6" Margin="3" Click="OpenBluetoothWindow"/>
            <Button Content="DAC" Grid.Row="8" Margin="3" Click="OpenDACWindow"/>
            <Button Content="DAP" Grid.Row="10" Margin="3" Click="OpenDAPWindow"/>
        </Grid>

    </Grid>
</Window>
